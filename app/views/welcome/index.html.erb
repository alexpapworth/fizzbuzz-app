<h2>Numbers</h2>

<div class="grid-table">
	<div class="row">
		<div class="header">Favourite</div>
		<div class="header">Number</div>
		<div class="header">Result</div>
		<div class="header">Number of Favourites</div>
	</div>

	<% @numbers.each do |number| %>
		<div class="row">
			<div class="cell"> 
				<% if number.users.include? @current_user %>
					<%= button_to "⭐️", favourite_destroy_path, method: :delete, params: {number_id: number.id}, remote: true %> 
				<% else %>
					<%= button_to "⭐️", favourite_create_path, method: :post, params: {number_id: number.id}, remote: true %> 
				<% end %>
			</div>
			<div class="cell"> <%= number.id %> </div>
			<div class="cell"> <%= number.result %> </div>
			<div class="cell"> <%= number.favourites.count %> </div>
		</div>
	<% end %>

</div>