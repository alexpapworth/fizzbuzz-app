<% if @current_user.nil? %>
  <%= link_to "Sign up", user_index_path, method: :post, remote: true, class: "sign-up" %>
  <%= link_to "Log in", session_new_path, class: "log-in" %>
<% else %>
  Hello <%= @current_user.name %>
  <%= link_to "Log out", session_destroy_path, method: :delete, remote: true %>
<% end %>